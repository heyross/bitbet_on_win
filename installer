@echo off
REM Ensure you're running this script in "Developer Command Prompt for VS 2022"

REM Clone the bitnet.cpp repository
git clone --recursive https://github.com/microsoft/BitNet.git
cd BitNet

REM Create and activate a new conda environment
conda create -n bitnet-cpp python=3.9 -y
conda activate bitnet-cpp

REM Install required Python packages
pip install -r requirements.txt

REM Download and convert the model
python setup_env.py --hf-repo tiiuae/Falcon3-7B-Instruct-1.58bit -q i2_s

echo Installation and setup complete.
pause

